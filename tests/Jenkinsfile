pipeline {
    agent { label 'test-agent' }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'venv/bin/pip install -r requirements.txt'
            }
        }

        stage('Run tests') {
            steps {
                sh 'venv/bin/pytest --maxfail=1'
            }
        }

        stage('Coverage') {
            steps {
                sh 'venv/bin/coverage run -m pytest'
                sh 'venv/bin/coverage report'
            }
        }
    }
}
